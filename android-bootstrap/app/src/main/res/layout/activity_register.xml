            <!-- Registration Form -->
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:background="#ddd"></LinearLayout>
                <!--android:layout_above="@+id/footer"-->
                <!--android:layout_below="@+id/header"-->
                <!-->-->
                <!-- Full Name Label -->
                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#372c24"
                    android:text="First Name"/>
                <EditText android:id="@+id/etFirstName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:singleLine="true"
                    android:layout_marginBottom="20dip"/>
                <!--  Email Label -->
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#372c24"
                    android:text="Last Name"
                    />

                <EditText
                    android:id="@+id/etLastName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:singleLine="true"
                    android:layout_marginBottom="20dip" />

                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#372c24"
                    android:text="Email"/>
                <EditText android:id="@+id/etEmail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:singleLine="true"
                    android:layout_marginBottom="20dip"/>
                <!-- Password Label -->
                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#372c24"
                    android:text="Password"/>
                <EditText android:id="@+id/etPassword"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:password="true"
                    android:singleLine="true"
                    android:layout_marginTop="5dip"/>
                <!-- Register Button -->
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/registerRadioGroup">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coach"
                        android:id="@+id/coachRB"
                        android:checked="false"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#000000"
                        android:layout_weight="0.23" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Player"
                        android:id="@+id/playerRB"
                        android:checked="false"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ff000000"
                        android:layout_weight="0.13" />
                </RadioGroup>

                <Button android:id="@+id/btnRegister"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="Register New Account"
                    android:layout_marginBottom="10dip" />
                <!-- Link to Login Screen -->
                <TextView android:id="@+id/tvRegisterCancel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dip"
                    android:layout_marginBottom="40dip"
                    android:text="Already has account! Login Here"
                    android:gravity="center"
                    android:textSize="20dip"
                    android:textColor="#025f7c"/>

            <!--</LinearLayout>-->
            <!-- Registration Form Ends -->
        </RelativeLayout>
    </ScrollView>
