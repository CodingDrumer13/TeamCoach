<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Drill Name -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/table_text_selector"
        android:textStyle="bold"
        android:text="Name: "
        />
    <TextView
        android:id="@+id/tv_drill_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="5dip"
        android:singleLine="true"
        android:layout_marginBottom="20dip"
        android:textColor="@color/table_text_selector" />
    <EditText
        android:id="@+id/et_drill_name"
        style="@style/SignInEditText"
        android:visibility="gone"
        />


    <!-- Drill Description -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/table_text_selector"
        android:textStyle="bold"
        android:text="Description: "
        />
    <TextView
        android:id="@+id/tv_drill_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="5dip"
        android:singleLine="true"
        android:layout_marginBottom="20dip"
        android:textColor="@color/table_text_selector"
        />
    <EditText
        android:id="@+id/et_drill_description"
        style="@style/SignInEditText"
        android:visibility="gone"
        />

    <!-- Drill Rating -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/table_text_selector"
        android:textStyle="bold"
        android:text="Rating: "
        />
    <TextView
        android:id="@+id/tv_drill_rating"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="5dip"
        android:singleLine="true"
        android:layout_marginBottom="20dip"
        android:textColor="@color/table_text_selector"
        />

    <!-- Drill Times Used -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/table_text_selector"
        android:textStyle="bold"
        android:text="Times Used: "
        android:id="@+id/tv_drill_times_used"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_drill_times_used_num"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="5dip"
        android:singleLine="true"
        android:layout_marginBottom="20dip"
        android:textColor="@color/table_text_selector"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/button_drill_edit"
        style="@style/ShadowText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_states"
        android:text="Edit"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"
        android:onClick="onClick"
        />

    <Button
        android:id="@+id/button_drill_submit"
        style="@style/ShadowText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_states"
        android:text="Submit"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"
        android:onClick="onClick"
        />

</LinearLayout>