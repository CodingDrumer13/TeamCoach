<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button android:id="@+id/btnLibraryBack"
        style="@style/ShadowText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_states"
        android:gravity="center"
        android:text="Back"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:textStyle="bold"
        android:onClick="onClick"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_library_list_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/age_group_column"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/table_text_header"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:id="@+id/library_container">
        </FrameLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Drill"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/text"
        android:background="@drawable/button_background_states"
        android:textStyle="bold"
        android:onClick="onClick"
        android:gravity="center"
        android:id="@+id/btnNewDrill"
        />

</LinearLayout>